<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.20">
    </RelativeLayout>
    <RelativeLayout android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.60">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My NanoDegree Apps!"
                android:textAlignment="center"
                android:textSize="20dp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"/>
            <Button
                android:id="@string/spotify_streamer"
                android:text="@string/spotify_streamer"
                style="@style/ButtonTheme"
                />
            <Button
                android:id="@string/scores_app"
                android:text="@string/scores_app"
                style="@style/ButtonTheme"
                />
            <Button
                android:id="@string/library_app"
                android:text="@string/library_app"
                style="@style/ButtonTheme"
                />
            <Button
                android:id="@string/build_it_bigger"
                android:text="@string/build_it_bigger"
                style="@style/ButtonTheme"
                />
            <Button
                android:id="@string/xyz_reader"
                android:text="@string/xyz_reader"
                style="@style/ButtonTheme"
                />
            <Button
                android:id="@string/capstone"
                android:text="@string/capstone"
                style="@style/ButtonTheme"
                android:background="#d5451d"
                />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.20">
    </RelativeLayout>
</LinearLayout>

